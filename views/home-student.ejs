<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>EduLingo</title>
</head>
<body>
    <h1>Hello, <%= user.name %>!</h1>
    <h2>Your courses:</h2>
    <table>
        <thead>
            <tr>
                <th>Course</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <tr>
            <% user.Courses.forEach(el => { %>
                    <% if (el.Enrollment.StudentId === user.id) { %>
                        <td><%= el.name %></td>
                        <td><a href="<%= el.id %>/courseDetail">Detail</a></td>
                    <% } %>
            <% }) %>
            </tr>
        </tbody>
    </table>
    <h2>Explore other courses:</h2>
    <table>
        <thead>
            <tr>
                <th>Course</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <% courses.forEach(el1 => { %>
                <tr>
                    <% idTakenCourses.forEach(el2 => { %>
                        <% if (el1.id !== el2) { %>
                            <td><%= el1.name %></td>
                            <td><a href="<%= el1.id %>/courseDetail">Detail</a></td>
                        <% } %>
                    <% }) %>
                </tr>
            <% }) %>
        </tbody>
    </table>
    <a href="/">Log Out</a>
</body>
</html>